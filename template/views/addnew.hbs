<body>
  <div id="head">
    <h1>Add new products</h1>
  </div>

  <div class="main">
    <br />
    <div class="input-box">
      <span class="details">Product name</span>
      <input type="text" id="pname" placeholder="Eg:fruits" required />
    </div>
    <div class="input-box">
      <span class="details">Product description</span>
      <textarea rows="5" cols="38" id="prodes"></textarea>
    </div>
    <div class="input-box">
      <span class="details">MRP in &#8377;</span>
      <input type="number" id="mrp" placeholder="Eg:500" required />
    </div>
    <div class="input-box">
      <span class="details">Contact number of shopkeeper</span>
      <input type="text" id="cno" placeholder="" required />
    </div>
    <div class="input-box">
      <span class="details">Image</span>
      <input type="file" id="pimg" placeholder="" required />
    </div>
    <button class="register-btn" id="subtn" type="submit">Save </button>
  </div>
  <br />
</body>

